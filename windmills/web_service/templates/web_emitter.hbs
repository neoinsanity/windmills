<script type="text/x-handlebars" data-template-name="messages">

    <section id="web-emitter-app">
        <header id="header">
            <h1>Messages</h1>
            {{input type="text"
            id="new-message"
            placeholder="Type a message"
            value=newMessage
            action="createMessage"}}
        </header>

        <section id="main">
            {{outlet}}

            <input type="checkbox" id="toggle-all">
        </section>
    </section>

    <footer id="footer">
    <span id="message-count">
        <strong>{{ remaining }}</strong> {{ inflection }} sent.
    </span>
        <ul id="filters">
            <li>
                {{#link-to "messages.index" activeClass="selected"}}All{{/link-to}}
            </li>
            <li>
                {{#link-to "messages.active" activeClass="selected"}}Active{{/link-to}}
            </li>
            <li>
                {{#link-to "messages.completed" activeClass="selected"}}Completed{{/link-to}}
            </li>
        </ul>

        <button id="clear-completed">
            Clear sent (1)
        </button>
    </footer>

    <footer id="info">
        <p>Double-click to edit a message</p>
    </footer>

</script>

<script type="text/x-handlebars" data-template-name="messages/index">
    <ui id="message-list">
        {{#each itemController="message"}}
            <li {{bind-attr class="isSent:sent isEditing:editing"}}>
                {{#if isEditing}}
                    {{edit-message class="edit"
                    value=body
                    focus-out="acceptChanges"
                    insert-newline="acceptChanges"}}
                {{else}}
                    {{input class="toggle" type="checkbox" checked=isSent}}
                    <label {{action "editMessage" on="doubleClick"}}>{{body}}</label>
                    <button class="destroy" {{action "removeMessage"}}></button>
                {{/if}}
            </li>
        {{/each}}
    </ui>
</script>